{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.mjs",
    ".prettierrc.js",
    "global-setup.ts",
    "keyvault-secrets.ts",
    "src",
    "playwright.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
