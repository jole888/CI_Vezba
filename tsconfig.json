{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "eslint.config.mjs",
    ".prettierrc.js",
    "global-setup.ts",
    "keyvault-secrets.ts",
    "playwright.config.ts",
    "parse-playwright-results.ts",
    "**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
